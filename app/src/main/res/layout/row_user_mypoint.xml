<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mypoint_list_index"
            android:layout_width="30dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"/>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mypoint_list_storename"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="가맹점명"
                    android:textColor="@color/color_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_mypoint_list_paycost"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_alignParentRight="true"
                    android:text="결제금액"
                    android:textColor="@color/color_1e91d4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_mypoint_list_pointtype"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_alignParentRight="true"
                    android:text="거래"
                    android:textColor="@color/color_1e91d4"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mypoint_list_date"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="사용일시"
                    android:textColor="@color/color_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_mypoint_list_pointkind"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_alignParentRight="true"
                    android:text="보너스종류"
                    android:textColor="@color/color_1e91d4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_mypoint_list_storetype"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_alignParentRight="true"
                    android:text="통합"
                    android:textColor="@color/color_1e91d4"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_mypoint_list_point"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentRight="true"
            android:text="135"
            android:textColor="@color/color_1e91d4"
            android:layout_marginRight="10dip"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
