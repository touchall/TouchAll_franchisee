<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!--<android.support.v4.widget.SwipeRefreshLayout-->
            <!--android:id="@+id/swipe_refresh"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

            <com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="10dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:paddingTop="10dip">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="10dip"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:paddingTop="10dip">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="24dip"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="보너스 종류"
                                android:textColor="@color/color_0075be"/>

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="유형"
                                android:textColor="@color/color_0075be"/>

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="누적보너스"
                                android:textColor="@color/color_0075be"/>

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="가용보너스"
                                android:textColor="@color/color_0075be"/>

                        </LinearLayout>

                        <View style="@style/line_gray_w" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="3dip"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="26dip"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="포인트"
                                android:textColor="@color/color_999"/>

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="합계"
                                android:textColor="@color/color_999"/>

                            <TextView
                                android:id="@+id/tv_header_mypoint_total"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="0p"
                                android:textColor="@color/color_999"/>

                            <TextView
                                android:id="@+id/tv_header_mypoint_canuse"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="0p"
                                android:textColor="@color/color_999"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="3dip"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="26dip"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="스탬프"
                                android:textColor="@color/color_999"
                                android:textSize="10sp"/>

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="합계"
                                android:textColor="@color/color_999"/>

                            <TextView
                                android:id="@+id/tv_header_mystemp_total"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="0p"
                                android:textColor="@color/color_999"/>

                            <TextView
                                android:id="@+id/tv_header_mystemp_canuse"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="0p"
                                android:textColor="@color/color_999"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="3dip"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="26dip"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="가위바위보"
                                android:textColor="@color/color_999"/>

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="합계"
                                android:textColor="@color/color_999"/>

                            <TextView
                                android:id="@+id/tv_header_mygame_total"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="0p"
                                android:textColor="@color/color_999"/>

                            <TextView
                                android:id="@+id/tv_header_mygame_canuse"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="0p"
                                android:textColor="@color/color_999"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="시작일"
                            android:textColorHint="@color/color_999">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/edit_header_find_startdate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="date"
                                android:focusableInTouchMode="false"
                                android:textColor="@color/color_333"
                                android:textSize="14sp" />
                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:layout_width="20dip"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="~"/>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="종료일"
                            android:textColorHint="@color/color_999">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/edit_header_find_enddate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="date"
                                android:focusableInTouchMode="false"
                                android:textColor="@color/color_333"
                                android:textSize="14sp" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dip"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_header_bonus_type"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="20dip"
                            android:layout_height="match_parent"
                            android:gravity="center"/>

                        <Spinner
                            android:id="@+id/spinner_header_bonus_kind"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="가맹점 명"
                            android:textColorHint="@color/color_999">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/edit_header_find_storename"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:textColor="@color/color_333"
                                android:textSize="13sp" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dip"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_header_area_city"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="20dip"
                            android:layout_height="match_parent"
                            android:gravity="center"/>

                        <Spinner
                            android:id="@+id/spinner_header_area_state"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dip"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_header_business_type"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="20dip"
                            android:layout_height="match_parent"
                            android:gravity="center"/>

                        <Spinner
                            android:id="@+id/spinner_header_business_detail"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <Button
                            android:id="@+id/btn_header_find_store"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:text="검색"/>

                        <View
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>

            </com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader>
        <!--</android.support.v4.widget.SwipeRefreshLayout>-->

        <TextView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="상세 목록"
            android:textColor="@color/color_666"
            android:textSize="24sp" />
    </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>