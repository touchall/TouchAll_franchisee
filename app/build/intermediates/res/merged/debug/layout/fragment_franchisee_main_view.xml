<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_toolbar"
            app:navigationIcon="@drawable/head_menu"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="터치올" />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <FrameLayout
            android:id="@+id/top_component"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dip">

                <TextView
                    android:id="@+id/text_main_hello"
                    android:layout_width="match_parent"
                    android:layout_height="20dip"
                    android:text=""/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dip"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_bonus_type"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="20dip"
                        android:text=""/>

                    <TextView
                        android:id="@+id/text_store_type"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="20dip"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_franchisee_grade"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="20dip"
                        android:text=""/>

                    <TextView
                        android:id="@+id/text_user_grade"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="20dip"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/bottom_component"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="6dip">
            <!--android:layout_height="57dip"-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="※ 홈페이지에서는 더욱 상세한 도움 기능을 이용하실 수 있음."/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="올포인텍㈜ 1688-2642" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="   "
                    android:textColor="@color/color_0f3460" />

                <TextView
                    android:id="@+id/tv_company_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회사소개"
                    android:textColor="@color/color_0f3460" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" | "/>

                <TextView
                    android:id="@+id/tv_touchall_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="터치올소개"
                    android:textColor="@color/color_0f3460" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""/>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_copyright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:textColor="@color/color_red"
                android:gravity="center"
                android:text="Copyright 2018 AllPOINTEC Co,ltd rights Reserved"
                android:textSize="12sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_component"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View style="@style/line_gray_w" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dip">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="10dip">

                            <LinearLayout
                                android:id="@+id/btn_company_intro"
                                android:layout_width="0dip"
                                android:layout_weight="1"
                                android:layout_height="80dip"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dip"
                                    android:src="@drawable/img_introduce"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dip"
                                    android:gravity="center"
                                    android:textColor="@color/color_toolbar"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:text="소개" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btn_franchisee_store_info"
                                android:layout_width="0dip"
                                android:layout_weight="1"
                                android:layout_height="80dip"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dip"
                                    android:src="@drawable/img_myfranchisee"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dip"
                                    android:gravity="center"
                                    android:textColor="@color/color_toolbar"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:text="My 가맹정보" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="10dip">

                            <LinearLayout
                                android:id="@+id/btn_franchisee_store_intro"
                                android:layout_width="0dip"
                                android:layout_weight="1"
                                android:layout_height="80dip"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dip"
                                    android:src="@drawable/img_myfranchisee_intro"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dip"
                                    android:gravity="center"
                                    android:textColor="@color/color_toolbar"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:text="My 매장소개" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btn_franchisee_store_usersinfo"
                                android:layout_width="0dip"
                                android:layout_weight="1"
                                android:layout_height="80dip"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dip"
                                    android:src="@drawable/img_userlist"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dip"
                                    android:gravity="center"
                                    android:textColor="@color/color_toolbar"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:text="이용자 조회" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="10dip">

                            <LinearLayout
                                android:id="@+id/btn_franchisee_detail_list"
                                android:layout_width="0dip"
                                android:layout_weight="1"
                                android:layout_height="80dip"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dip"
                                    android:src="@drawable/img_detaillist"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dip"
                                    android:gravity="center"
                                    android:textColor="@color/color_toolbar"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:text="상세 취급내역" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btn_franchisee_monthly_list"
                                android:layout_width="0dip"
                                android:layout_weight="1"
                                android:layout_height="80dip"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dip"
                                    android:src="@drawable/img_monthlist"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dip"
                                    android:gravity="center"
                                    android:textColor="@color/color_toolbar"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:text="주,월간 내역" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="10dip">

                            <LinearLayout
                                android:id="@+id/btn_franchisee_ad_tips"
                                android:layout_width="0dip"
                                android:layout_weight="1"
                                android:layout_height="80dip"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dip"
                                    android:src="@drawable/img_mytips"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dip"
                                    android:gravity="center"
                                    android:textColor="@color/color_toolbar"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:text="My 맞춤판촉 Tip" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btn_franchisee_notices"
                                android:layout_width="0dip"
                                android:layout_weight="1"
                                android:layout_height="80dip"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dip"
                                    android:src="@drawable/img_notice"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dip"
                                    android:gravity="center"
                                    android:textColor="@color/color_toolbar"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:text="공지,자료실" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>