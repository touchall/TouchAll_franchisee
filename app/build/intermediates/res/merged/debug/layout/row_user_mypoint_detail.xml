<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dip"
        android:paddingRight="15dip">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mypoint_detail_store"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="더카페"
                    android:textColor="@color/color_999"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/tv_mypoint_detail_valid_point"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0p"
                    android:textColor="@color/color_999"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/tv_mypoint_detail_use_point"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0p"
                    android:textColor="@color/color_999"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/btn_mypoint_detail_use_point"
                    android:layout_width="0dip"
                    android:layout_height="24dip"
                    android:layout_weight="1"
                    android:background="@drawable/rect_gray_radius"
                    android:gravity="center"
                    android:text="사용"
                    android:textColor="@color/color_999"
                    android:textSize="10sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
